<%= render :partial => 'simple_blog/posts/search' %>

<h4>Categories</h4>
<ul>
  <% get_categories.each do |category| %>
    <li><%= link_to(category.name, category_path(category.slug)) %> <small>(<%= category.posts.count %>)</small></li>
  <% end %>
</ul>

<h4>Recent Posts</h4>
<ul>
  <% get_recent_posts(3).each do |post| %>
    <li><%= link_to(post.title, post_path(post.slug)) %></li>
  <% end %>
</ul>

<h4>Authors</h4>
<ul>
  <% get_authors.each do |author| %>
    <li><%= link_to(author.instance_eval("self.#{SimpleBlog.author_user_class_display_field}"), author_path(author)) %></li>
  <% end %>
</ul>

<h4>Tags</h4>
<ul>
  <% get_tags.each do |tag| %>
    <li><%= link_to(tag.name, tag_path(tag.name)) %></li>
  <% end %>
</ul>

<h4>Archive</h4>
<ul>
  <% get_archives.each do |date| %>
    <li><%= link_to(date.strftime('%B %Y'), archive_path(date.year, date.month)) %></li>
  <% end %>
</ul>
